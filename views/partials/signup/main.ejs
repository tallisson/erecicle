<main class="container-fluid d-flex justify-content-center mb-2">
  <form class="px-4 py-4 border01 rounded form-signup">
    <fieldset>
      <legend class="legend text-primary01">
        Cadastre-se
      </legend>
      <p class="p-legend text-secondary02">Preencha os dados</p>
    </fieldset>
    <div 
      class="form-group image-container text-center align-self-center rounded"
    >
      <img 
        src="./imgs/img-upload.png" 
        alt="Selecione uma imagem"
        class="img-upload img-fluid"
      >
      <input
        type="file"
        accept="image/*"
        name="image"
        style="display: none;"
      >
    </div>

    <p class="p-sublegend text-primary01">
      Dados
    </p>

    <div class="form-group">
      <label for="name">
        <span class="text-secondary02">
          Nome <i class="text-danger">*</i>
        </span>
      </label>
      <input
        class="form-control"
        type="text"
        name="name"
        id="name"
        required
      >
    </div>

    <div class="form-group">
      <label for="whats">
        <span class="text-secondary02">
          Whatsapp <i class="text-danger">*</i>
        </span>
      </label>
      <input
        class="form-control"
        type="tel"
        name="whats"
        id="whats"
        required
        autocapitalize="off"
      >
    </div>

    <div class="form-group">
      <label for="name">
        <span class="text-secondary02">
          E-mail <i class="text-danger">*</i>
        </span>
      </label>
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        required
        autocapitalize="off"
      >
    </div>

    <div class="form-group">
      <label for="name">
        <span class="text-secondary02">
          Confirmar e-mail <i class="text-danger">*</i>
        </span>
      </label>
      <input
        class="form-control"
        type="email"
        name="email-confirm"
        id="email-confirm"
        required
        autocapitalize="off"
      >
    </div>

    <div class="form-group">
      <label for="name">
        <span class="text-secondary02">
          Senha <i class="text-danger">*</i>
        </span>
      </label>
      <input
        class="form-control"
        type="password"
        name="password"
        id="password"
        maxlength="12"
        required
      >
    </div>

    <div> 
      <label class="text-secondary02">
        <span>
          Idade <i class="text-danger">*</i>
        </span>
      </label>       
      <div class="form-check">        
        <input class="form-check-input" type="radio" id="age01" name="age" value="Menos de 18">
        <label class="form-check-label" for="age01">Menos de 18</label>
      </div>
      <div class="form-check">        
        <input class="form-check-input" type="radio" id="age02" name="age" value="19 - 39">
        <label class="form-check-label" for="age2">19 - 39</label>  
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" id="age03" name="age" value="40 - 60">
        <label class="form-check-label" for="age3">40 - 60</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" id="age04" name="age" value="Mais de 60">
        <label class="form-check-label" for="age04">Mais de 60</label>
      </div>
    </div>

    <div class="form-group mt-2">
      <label for="bio" class="text-secondary02">
        <span>
          Biografia <i class="text-danger">*</i>
        </span>
      </label>
      <textarea
        name="bio"
        id="bio"
        class="form-control w-100 text-primary01 text-bold font-size-18 rounded bg-secondary03"
        rows="5"
      ></textarea>
    </div>
    
    <p class="p-sublegend">
      Endere√ßo <i class="text-danger">*</i>
    </p>
    <div class="form-group">

    <div id="map" class="map rounded"></div>
    
    <div class="form-group row">
      <div class="col-lg-6">
        <label for="road">
          <span class="text-secondary02">
            Logradouro
          </span>
        </label>
        <input
          class="form-control"
          type="text"
          name="road"
          id="road"
          required
        >
      </div>
      <div class="col-lg-4">
        <label for="nHood">
          <span class="text-secondary02">
            Bairro
          </span>
        </label>
        <input
          class="form-control"
          type="text"
          name="nHood"
          id="nHood"
          required
        >
      </div>
      <div class="col-lg-2">
        <label for="num">
          <span class="text-secondary02">
            Numero
          </span>
        </label>
        <input
          class="form-control"
          type="number"
          name="num"
          id="num"
          required
        >
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-10">
        <label for="city">
          <span class="text-secondary02">
            Cidade
          </span>
        </label>
        <input
          class="form-control"
          type="text"
          name="city"
          id="city"
          required
        >
      </div>

      <div class="col-md-2">
        <label for="uf">
          <span class="text-secondary02">
            UF
          </span>
        </label>
        <input
          class="form-control"
          type="text"
          name="uf"
          id="uf"
          required
        >
      </div>
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-success btn-signup font-weight-bold">
        Finalizar Cadastro
      </button>
    </div>
  </form>
</main>