<main class="container-fluid d-flex justify-content-center mb-2">
  <form class="px-4 py-4 border01 form-signup">
    <fieldset>
      <legend class="legend text-primary01">
        Cadastre-se
      </legend>
      <p class="p-legend text-secondary01">Preencha os dados</p>
    </fieldset>
    <div 
      class="form-group image-container text-center align-self-center border-dark rounded"
    >
      <img 
        src="./imgs/img-upload.png" 
        alt="Selecione uma imagem"
        class="img-upload"
      >
      <input
        type="file"
        accept="image/*"
        name="image"
        style="display: none;"
      >
    </div>

    <p class="p-sublegend text-primary01">
      Dados
    </p>

    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="name"
        id="name"
        placeholder="Seu nome"
        required
      >
    </div>

    <div class="form-group">
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        placeholder="E-mail"
        required
        autocapitalize="off"
      >
    </div>

    <div class="form-group">
      <input
        class="form-control"
        type="email"
        name="email-confirm"
        id="email-confirm"
        placeholder="Confirmação de E-mail"
        required
        autocapitalize="off"
      >
    </div>

    <div class="form-group">
      <input
        class="form-control"
        type="password"
        name="password"
        id="password"
        placeholder="Senha"
        maxlength="12"
        required
      >
    </div>

    <div> 
      <span>Idade:</span>       
      <div class="form-check">        
        <input class="form-check-input" type="radio" id="age01" name="age" value="Menos de 18">
        <label class="form-check-label" for="age01">Menos de 18</label>
      </div>
      <div class="form-check">        
        <input class="form-check-input" type="radio" id="age02" name="age" value="19 - 39">
        <label class="form-check-label" for="age2">19 - 39</label>  
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" id="age03" name="age" value="40 - 60">
        <label class="form-check-label" for="age3">40 - 60</label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="radio" id="age04" name="age" value="Mais de 60">
        <label class="form-check-label" for="age04">Mais de 60</label>
      </div>
    </div>

    <div class="text-right">
      <button type="submit" class="btn btn-primary btn-signup font-weight-bold">
        Enviar
      </button>
    </div>
  </form>
</main>